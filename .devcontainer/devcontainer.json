{
	"name": "bepro_iseebetter",
	"context": "..",
	// "dockerFile": "../Dockerfile.remote.arm64",
	"image": "iseebetter:latest",
	"settings": {
		"terminal.integrated.shell.linux": null
	},
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"xaver.clang-format"
	],
	"forwardPorts": [
		8080
	],
	"runArgs": [
		"--runtime=nvidia",
		"--privileged",
		"--net=host",
		"--gpus=all",
		"--shm-size=11G",
		"-e NVIDIA_VISIBLE_DEVICES=all",
		"-e NVIDIA_DRIVER_CAPABILITIES=all",
		"--volume=/tmp:/tmp",
		"--volume=/var/log:/var/log",
		"--volume=/var/www/static:/var/www/static"
	],
	"workspaceFolder": "/iSeeBetter",
	"workspaceMount": "source=/home/research/iSeeBetter,target=/iSeeBetter,type=bind,consistency=cached",
	"remoteUser": "root"
	// "remoteEnv": {
	// 	"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	// }
}